<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:foreground="?android:attr/selectableItemBackground"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#7f726a">

        <ImageView
            android:id="@+id/recycler_view_image"
            android:scaleType="fitCenter"
            tools:background="@tools:sample/backgrounds/scenic"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/recycler_view_text"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            cardView:layout_constraintTop_toTopOf="@id/image"
            cardView:layout_constraintLeft_toLeftOf="@id/image"
            cardView:layout_constraintRight_toRightOf="parent"
            cardView:layout_constraintBottom_toBottomOf="parent"
            android:padding="3dp"
            tools:text="@tools:sample/full_names"
            android:textColor="@color/textColor" />
    </LinearLayout>
</androidx.cardview.widget.CardView>